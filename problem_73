#include <stdio.h>

int main() {
    int arr1[3] = {10, 20, 30};
    int arr2[3] = {40, 50, 60};
    int merged[6];
    int i, j;
    for (i = 0; i < 3; i++) {
        merged[i] = arr1[i];
    }
    for (j = 0; j < 3; j++) {
        merged[i + j] = arr2[j];
    }
    printf("Merged array:\n");
    for (i = 0; i < 6; i++) {
        printf("%d ", merged[i]);
    }
    printf("\n");

    return 0;
}
