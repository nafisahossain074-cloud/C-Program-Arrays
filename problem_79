#include <stdio.h>

int main() {
    int mat1[2][2] = {{1, 2}, {3, 4}};
    int mat2[2][2] = {{1, 2}, {3, 4}};
    int rows = 2, cols = 2;
    int i, j, equal = 1;
    for (i = 0; i < rows; i++) {
        for (j = 0; j < cols; j++) {
            if (mat1[i][j] != mat2[i][j]) {
                equal = 0;
                break;
            }
        }
        if (!equal)
            break;
    }

    if (equal)
        printf("The two matrices are equal.\n");
    else
        printf("The two matrices are not equal.\n");

    return 0;
}
